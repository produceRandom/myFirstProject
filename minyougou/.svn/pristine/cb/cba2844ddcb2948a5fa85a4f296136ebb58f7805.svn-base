<script>
    //html’s font follow scren size change
    var width=$(window).width()
    var size=width/10
    size = size +"px"
    $("html").css("font-size",size)
    $(window).resize(function() {
        var width=$(window).width()
        var size=width/10
        size = size +"px"
        $("html").css("font-size",size)
    });

</script>
<script>
    $('.table_qty_dec').click(function(){
        var value = $(this).parent().children('input').attr('value');
        if(value > 0){
            $(this).parent().children('input').attr('value', value - 1);
        }
    });
    $('.table_qty_inc').click(function(){
        var value = $(this).parent().children('input').attr('value');
        $(this).parent().children('input').attr('value', value - -1);
    })
</script>
